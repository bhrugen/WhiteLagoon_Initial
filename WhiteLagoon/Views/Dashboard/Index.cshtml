<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">Dashboard</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-md-6 col-xl-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-end mt-2">
                        <div id="total-bookings-chart" data-colors='["--bs-primary"]'></div>
                    </div>
                    <div>
                        <p class="text-muted mb-0">Total Bookings</p>
                        <h4 class="mb-1 mt-1"><span data-plugin="counterup" id="spnTotalCount">222</span></h4>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionBookingRatio"></p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-end mt-2">
                        <div id="user_registered_chart" data-colors='["--bs-warning"]'></div>
                    </div>
                    <div>
                        <p class="text-muted mb-0">User Registered</p>
                        <h4 class="mb-1 mt-1"><span data-plugin="counterup" id="spnTotalUserRegisterdCount"></span></h4>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionUserRegisterdRatio"></p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-end mt-2">
                        <div id="total-revenue-chart" data-colors='["#ffc0cb"]'></div>
                    </div>
                    <div>
                        <p class="text-muted mb-0">Total Revenue</p>
                        <h4 class="mb-1 mt-1"><span data-plugin="counterup" id="spnTotalRevenueCount"></span></h4>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionRevenueRatio"></p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-8 mt-2">
            <div class="card">
                <div class="card-body">
                    <div>
                        <p class="text-muted mb-0">New Members And Bookings In Past 30 Days</p>
                    </div>
                    <div id="new_members_and_bookings_chart" data-colors='["--bs-primary", "--bs-warning"]'></div>
                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div>
                        <p class="text-muted mb-0">Customer Bookings</p>
                    </div>
                    <div id="customer_bookings_chart" data-colors='["--bs-primary", "--bs-warning"]'></div>

                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
    </div>
</div>

@section scripts{
    <script src="~/js/dashboardUtility.js"></script>
    <script src="~/js/dashboard/getTotalBookings.js"></script>
    <script src="~/js/dashboard/getTotalRegisteredUser.js"></script>
    <script src="~/js/dashboard/getTotalRevenue.js"></script>
    <script src="~/js/dashboard/getCustomerBookingsChart.js"></script>
    <script src="~/js/dashboard/getMembersAndBookingsChart.js"></script>
}