@using Microsoft.AspNetCore.Components;
@model WhiteLagoon_Models.BookingDetail

<div id="printDiv" class="p-4 mt-0 mt-lg-4">
    <div class="row" style="border: 1px solid #aaa;">

        <div class="col-12 col-lg-6 p-4 2 mt-2 mt-md-0 printDiv">
             <form method="post">
                <div class="row p-1 " style="border-radius:20px; ">
                    <div class="col-6">
                        <h3 class="text-success">Villa Details</h3>
                    </div>
                    <hr />
                    <partial name="_VillaDetail" model="@Model.Villa" />
                    <hr />
                    <div>
                        <button id="ExportPdf" type="submit" asp-action="ExportPdf" asp-route-bookingId="@Model.Id" class="btn btn-danger noPrint">Print</button>
                    </div>
                    <div class="text-end">
                        <h4 class="text-danger font-weight-bold ">
                            Booking Total :
                            <span style="border-bottom:1px solid #ff6a00">
                                @Model.TotalCost.ToString("c")
                            </span>
                        </h4>
                    </div>
                </div>
             </form>
        </div>
        <div class="col-12 col-lg-6 p-4 2 mt-4 mt-md-0" style="border-left:1px solid #aaa;">
            <form method="post">
                <input asp-for="Id" hidden />
                <input asp-for="VillaId" hidden />
                <input asp-for="UserId" hidden />
                <input asp-for="CheckInDate" hidden />
                <input asp-for="CheckOutDate" hidden />
                <input asp-for="Nights" hidden />
                <div class="row pt-1 mb-3 " style="border-radius:20px; ">
                    <div class="col-6">
                        <h3 class="text-success">Enter Booking Details</h3>
                    </div>
                    <div class="col-6">
                        @if ((Model.Status == SD.StatusApproved || Model.Status == SD.StatusPending)&& User.IsInRole(SD.Role_Admin))
                        {
                            <button asp-action="CancelBooking" type="submit" class="btn btn-sm btn-outline-danger form-control my-1 noPrint"><i class="bi bi-x-circle"></i> &nbsp; Cancel Booking</button>
                        }
                    </div>
                </div>
                <div class="row">
                <div class="form-group pt-2 col-6">
                    <label class="text-warning">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group pt-2 col-6">
                    <label class="text-warning">Phone</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning">Check in Date</label>
                    <input asp-for="CheckInDate" disabled class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning">Check Out Date</label>
                    <input asp-for="CheckOutDate" disabled class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning">No. of nights</label>
                    <input asp-for="Nights" disabled class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning" asp-for="Status"></label>
                    <input asp-for="Status" disabled class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning" asp-for="BookingDate"></label>
                    <input asp-for="BookingDate" disabled class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning" asp-for="CheckInDate"></label>
                    <input asp-for="CheckInDate" disabled class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning" asp-for="ActualCheckInDate"></label>
                        <input asp-for="ActualCheckInDate" disabled class="form-control" />
                    </div>


                    <div class="form-group pt-2 col-6">
                    <label class="text-warning" asp-for="CheckOutDate"></label>
                    <input asp-for="CheckOutDate" disabled class="form-control" />
                </div>
                    <div class="form-group pt-2 col-6">
                    <label class="text-warning" asp-for="ActualCheckOutDate"></label>
                    <input asp-for="ActualCheckOutDate" disabled class="form-control" />
                </div>

                    <div class="form-group pt-2 col-6">
                        <label class="text-warning" asp-for="VillaNumber"></label>
                        <select class="form-control" asp-for="VillaNumber">
                            @foreach (var item in Model.VillaNumbers)
                            {
                                <option value="@item.Villa_Number">@item.Villa_Number</option>
                            }
                        </select>
                    </div>


                @if (Model.IsPaymentSuccessful)
                {
                        <div class="form-group pt-2 col-6">
                        <label class="text-warning" asp-for="StripePaymentIntentId"></label>
                        <input asp-for="StripePaymentIntentId" disabled class="form-control" />
                    </div>
                        <div class="form-group pt-2 col-6">
                        <label class="text-warning" asp-for="StripeSessionId"></label>
                        <input asp-for="StripeSessionId" disabled class="form-control" />
                    </div>
                        <div class="form-group pt-2 col-6">
                        <label class="text-warning" asp-for="PaymentDate"></label>
                        <input asp-for="PaymentDate" disabled class="form-control" />
                    </div>
                }
                </div>
                <div class="form-group pt-2 pt-md-4">

                    @if (User.IsInRole(SD.Role_Admin))
                    {

                        @if (Model.Status == SD.StatusApproved)
                        {
                            <button asp-action="CheckIn" type="submit" class="btn btn-warning form-control my-1"><i class="bi bi-check2-square"></i> &nbsp; Check In</button>
                        }
                        @if (Model.Status == SD.StatusCheckedIn)
                        {
                            <button asp-action="CheckOut" type="submit" class="btn btn-success form-control my-1"><i class="bi bi-clipboard2-check"></i> &nbsp; Check Out / Complete Booking</button>
                        }
                        
                    }
                </div>
            </form>
        </div>
    </div>
</div>